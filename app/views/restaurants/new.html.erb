 <%= form_for(@restaurant) do |f| %>
    <div class="form-group">
    <%= f.label :name, class: 'mt-3' %>
    <%= f.text_field :name, class: 'form-control d-block mt-1 mb-1 w-100' %>
  </div>

  <div class="form-group">
    <%= f.label :address, class: 'mt-3' %>
    <%= f.text_field :address, class: 'form-control d-block mt-1 mb-1 w-100'  %>
  </div>

  <div class="form-group">
    <%= f.label :phone_number, class: 'mt-3' %>
    <%= f.text_field :phone_number, class: 'form-control d-block mt-1 mb-1 w-100'  %>
  </div>

  <div class="form-group">
    <%= f.label :category, class: 'mt-3', for: 'exampleFormControlSelect1' %>
    <%= f.select :category, options_for_select([['Select One', ''], 'chinese', 'italian', 'japanese', 'french', 'belgina']), :class => 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary d-block mt-3 mb-3' %>
<% end %>

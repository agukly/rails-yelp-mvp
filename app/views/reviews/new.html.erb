<%= form_for([@restaurant, @review]) do |f| %>
  <div class="form-group">
    <%= f.label :content, class: 'mt-3' %>
    <%= f.text_field :content, class: 'form-control d-block mt-1 mb-1 w-100' %>
  </div>

  <div class="form-group">
    <%= f.label :rating, class: 'mt-3', for: 'exampleFormControlSelect1' %>
    <%= f.select :rating, options_for_select([['Select One', ''], '0', '1', '2', '3', '4', '5']), :class => 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary d-block mt-3 mb-3' %>
<% end %>
